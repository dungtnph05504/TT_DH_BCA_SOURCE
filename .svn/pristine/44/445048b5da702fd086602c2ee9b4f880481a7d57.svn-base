<script type="text/javascript">
	function doSubmit(form){
		window.location.href="?url=hotel/hotel_query.html";
		return false;
	}
</script>

<table>
	<tr align="center" >
		<td><h1>Welcome to Hotel Booking System</td>
	</tr>
	<tr><td>&nbsp;</td></tr>
</table>

<div id="global_error_div"></div>
<script type="text/javascript">
	$(document).ready(function() {
		$("span.tips").tooltip();
	});		
</script>
<fieldset>
	<div class="row">
		<legend>Hotel Quick Search</legend>
		<label for="searchString">Hotel Name:</label>
		<input id="hotel.name" value="name"/>
		
		<span id="hotel.query.keyword" class="tips" title="tips message">?</span>
		<br>
		<label for="test">Hotel Address:</label>
		<input id="hotel.address" value="address"/>
	</div>		
</fieldset>

<div class="span-8">
	<input type="button" name="decision" onclick="doSubmit(this.form);" value="Find Hotels"/>
	<input type="reset" name="reset" onclick="$.fn.errorBinder.reset();" value="Reset Tooltips"/>
</div>